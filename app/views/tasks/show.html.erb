<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p><% if @task.completed %></p>
  <i class="fa-solid fa-check"></i>
<% end %>
<p><%= link_to "Edit Task", edit_task_path %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
<p><%= link_to "Task List", tasks_path %></p>
