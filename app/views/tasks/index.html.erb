<h2>Tasks</h2>
<p><%= link_to "Create New Task", new_task_path %></p>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><%=  link_to task.title, task_path(task) %> <i class="fa-solid fa-check"></i></li>
    <% else %>
      <li><%=  link_to task.title, task_path(task) %></li>
    <% end %>
  <% end %>
</ul>
